<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_newbooks_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bj_2"
        android:scaleType="fitCenter"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="19dp">
    </ImageView>

    <LinearLayout
        android:layout_toRightOf="@id/rv_newbooks_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rv_newbooks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="#3389c6"
            android:text="北方栖姬选集">
        </TextView>

        <TextView
            android:id="@+id/rv_newbooks_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:text="北方栖姬/2019.1.1/中国邮电大学出版社"
            android:textColor="#999999">
        </TextView>

        <TextView
            android:id="@+id/rv_newbooks_ISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:text="标准书号:233-2333-2333-2333"
            android:textColor="#999999">
        </TextView>

    </LinearLayout>

    <View
        android:id="@+id/divided_bottom"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:layout_below="@+id/rv_newbooks_image">
    </View>

</RelativeLayout>