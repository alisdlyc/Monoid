<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage.MainActivity"
    android:id="@+id/draw_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="233dp"
            android:layout_height="32dp"
            android:background="@drawable/searchboxstyle">

            <ImageView
                android:id="@+id/books_search_sclecter"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/books_search">
            </ImageView>

            <EditText
                android:id="@+id/books_search_text"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/books_search_sclecter"
                android:layout_height="30dp"
                android:layout_width="150dp"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textSize="20sp"
                android:textColor="#666666"
                android:background="#fff"
                android:inputType="text">
            </EditText>

            <ImageView
                android:id="@+id/books_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/search_icon"
                android:layout_toRightOf="@+id/books_search_text">
            </ImageView>

        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/home_left_Ngv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/dl_main"
        app:menu="@menu/menu_main">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>